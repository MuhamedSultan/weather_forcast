<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WeatherForcast" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/black</item>
         <item name="colorSecondary">@color/light_gray</item>
         <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.WeatherForcast" parent="Base.Theme.WeatherForcast" />

    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#009688</item>
        <item name="android:datePickerDialogTheme">@style/CustomDatePicker</item>
    </style>


    <style name="CustomDatePicker" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:headerBackground">#009688</item>
        <item name="android:background">#009688</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarTextColor">#009688</item>
        <item name="android:colorAccent">#009688</item>
    </style>

    <style name="CustomTimePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#009688</item>
    </style>
</resources>